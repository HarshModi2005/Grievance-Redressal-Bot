# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# AI Image Analysis Configuration (Choose one or both)
# OpenAI GPT-4 Vision API Key (Recommended for best results)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google Gemini Vision API Key (Alternative option)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

# UMANG API Configuration (Optional - for production use)
# Leave empty to use mock client for testing
UMANG_CLIENT_ID=
UMANG_CLIENT_SECRET=
UMANG_API_BASE_URL=https://api.umang.gov.in

# CPGRAMS API Configuration (Optional - for production use)
# Enhanced department-specific routing system
# Leave empty to use mock client for testing/demo
CPGRAMS_CLIENT_ID=
CPGRAMS_CLIENT_SECRET=
CPGRAMS_API_BASE_URL=https://api.cpgrams.gov.in
CPGRAMS_API_VERSION=v2

# Department Identification Configuration
# Enable AI-powered department routing (true/false)
ENABLE_DEPARTMENT_ROUTING=true
# Minimum confidence score required for department identification (0-100)
DEPARTMENT_CONFIDENCE_THRESHOLD=60.0
# Fallback department code when identification fails
FALLBACK_DEPARTMENT=GENERAL

# OCR Configuration
# Path to Tesseract OCR executable
# macOS (via Homebrew): /opt/homebrew/bin/tesseract or /usr/local/bin/tesseract
# Linux: /usr/bin/tesseract
# Windows: C:/Program Files/Tesseract-OCR/tesseract.exe
TESSERACT_CMD=/usr/bin/tesseract

# Database Configuration
# SQLite database path (relative or absolute)
DATABASE_URL=sqlite:///grievance_bot.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Security Configuration (Optional)
# Generate a secure encryption key for sensitive data
# You can generate one with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=10

# OCR Languages
# Supported languages for Tesseract OCR (separated by +)
# Available: eng (English), hin (Hindi), ben (Bengali), tel (Telugu), mar (Marathi), guj (Gujarati), tam (Tamil)
OCR_LANGUAGES=eng+hin+ben+tel+mar+guj+tam

